<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%- include('../includes/navbar.ejs') %>

    <main class="cartpage mt-5">

        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Your Order</h2>
                    <small class="form-text text-muted">Services and products</small>
                </div>
            </div>
            <% if(hasOrders) { %>

            <div class="row">

                <div class="col-sm-12 text-center">
                    <div class="card-cart card-1">
                        <div class="card-body">
                            <ul>
                                <%   orders.forEach(order => { %>
                                <li>
                                    <h1 class="main-text">Order - # 
                                        <%= order.id %> - <a href="/orders/<%= order.id %>">Invoice</a>
                                    </h1>
                                    <ul>
                                        <li class="main-text">
                                            <% order.products.forEach(product => {%>
                                        <li class="main-text">
                                            <%= product.title %> (<%= product.orderItem.quantity %>)
                                        </li>
                                        <% }) %>
                                        </li>
                                    </ul>
                                </li>
                            <%  }) %>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>

            <% } else {%>
        <h2 class="text-center">No Orders</h2>
            <%  } %>
        </div>
    </main>
    <%- include('../includes/foot.ejs') %>