<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%- include('../includes/navbar.ejs') %>

    <main class=" mt-5">
        <div class="container">
            <%if (errorMessage) {%>
            <div style="margin: 1rem auto 1.4rem auto;" class="text-center">
                <span class="btn-danger error-message">
                    <%= errorMessage %></span>

            </div>
            <% }%>
            <div class="row">
                <div class="col-sm-12 loginpage">
                    <form action="/auth/new-password" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="userId" value="<%= userId %>">
                        <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                        <div class="form-group">
                            <label for="password" class="form-block">New Password</label>
                            <input type="password" name="text" id="password" class="form-control login-input">
                        </div>

                        <button type="submit" class="btn btn-success">Update Password</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <%- include('../includes/foot.ejs') %>